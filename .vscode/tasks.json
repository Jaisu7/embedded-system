{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build and Run C Program",
            "type": "shell",
            "command": "gcc",
            "args": [
                "${file}",
                "-o",
                "${fileDirname}\\${fileBasenameNoExtension}.exe"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": ["$gcc"],
            "detail": "Compile and run current C file with GCC",
            "options": {
                "cwd": "${fileDirname}"
            }
        },
        {
            "label": "Run C Program",
            "type": "shell",
            "command": "${fileDirname}\\${fileBasenameNoExtension}.exe",
            "dependsOn": "Build and Run C Program",
            "group": {
                "kind": "test",
                "isDefault": true
            }
        }
    ]
}
